<div class="container">
    <form action="/form/add/" method="post">
        <h1 class="text-center">Thông tin sinh viên</h1>

       
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" name="name"  id="name" placeholder="Nhập tên">
        </div>

        <div class="form-group">
            <label for="age">Age</label>
            <input type="number" class="form-control" name="age" id="age" placeholder="Nhập tuổi">
        </div>

        <div class="form-group">
            <label for="hometown">Hometown</label>
            <input type="text" class="form-control" name="hometown" id="hometown" placeholder="Nhập quê quán">
        </div>

        <div class="form-group">
            <label for="school">School</label>
            <input type="text" class="form-control" name="school" id="school" placeholder="Nhập trường">
        </div>

        <div class="form-group">
            <label for="academic_performance">Academic Performance</label>
            <select class="custom-select" name="academic_performance" id="academic_performance">
                <option selected disabled>Chọn học lực</option>
                <option value="gioi">Giỏi</option>
                <option value="kha">Khá</option>
                <option value="trung_binh">Trung bình</option>
                <option value="yeu">Yếu</option>
            </select>
        </div>


        <div class="form-group">
            <label for="conduct">Conduct</label>
            <select class="custom-select" name="conduct" id="conduct">
                <option selected disabled>Chọn hạnh kiểm</option>
                <option value="gioi">Giỏi</option>
                <option value="kha">Khá</option>
                <option value="trung_binh">Trung bình</option>
                <option value="yeu">Yếu</option>
            </select>
        </div>

        <div class="form-row">
            <div class="col">
                <label for="math">Math</label>
                <input type="number" name="math" class="form-control" id="math" placeholder="Điểm toán">
            </div>
            <div class="col">
                <label for="liter">Literature</label>
                <input type="number" name="liter" class="form-control" id="liter" placeholder="Điểm văn">
            </div>
            <div class="col">
                <label for="eng">English</label>
                <input type="number" name="eng" class="form-control" id="eng" placeholder="Điểm tiếng Anh">
            </div>
        </div>

        <button class="btn btn-danger mt-2" type="submit">OK</button>
    </form>
</div>
